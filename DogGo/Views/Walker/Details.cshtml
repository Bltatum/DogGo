@model DogGo.Models.ViewModel.WalkerDetailsViewModel

@{
    ViewData["Title"] = "Details";
}


    <h1 class="mb-4">Walker Profile</h1>
<div>

    <section class="container">
        <img style="width:100px;float:left;margin-right:20px"
             src= @Model.Walker.ImageUrl />
        <div>
            <label class="font-weight-bold">Name:</label>
            <span>@Model.Walker.Name</span>
        </div>
        <div>
            <label class="font-weight-bold">Neighborhood:</label>
            <span>@Model.Neighborhood.Name</span>
        </div>
    </section>

    <hr class="mt-5" />
    <div class="clearfix"></div>

    <div class="row">
        <section class="col-8 container mt-5">
            <h1 class="text-left">Recent Walks</h1>

            <div class="row">
                @if (Model.Walk != null)
                {

                    @foreach (Walk walk in Model.Walk)
                    {
                        <div class="card m-4" style="width: 18rem;">

                            <div class="card-body">
                                <div>
                                    <label class="font-weight-bold">Date:</label>
                                    <span>@walk.Date.ToShortDateString()</span>
                                </div>
                                <div>
                            <label class="font-weight-bold">Client:</label>
                            <span>@walk.Owner.Name</span>
                        </div>
                                <div>
                                    <label class="font-weight-bold">Duration:  </label>
                                    <span> @walk.TotalDuration() min </span>

                                </div>
                            </div>
                        </div>
                    }
                }
                  else
                {
                    <div>
                         <h3>No Walks Yet</h3>
                    </div>
                    
                }

            </div>
        </section>
       <aside><h3>Total Walk Time:  @Model.TotalWalkTime() min </h3></aside>
    </div>
</div>


